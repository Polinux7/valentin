    <script>
        (function() {
            // ========== 1. –ü–ê–î–ê–Æ–©–ò–ï –°–ï–†–î–ï–ß–ö–ò (–æ—á–µ–Ω—å –º–∏–ª–æ) ==========
            const heartsContainer = document.getElementById('fallingHeartsArea');
            const heartSymbols = ['‚ù§Ô∏è', 'üß°', 'üíõ', 'üíö', 'üíô', 'üíú', 'ü§ç', 'üíî', 'üíñ', 'üíó', 'üíò', 'üíù', 'üíû', 'üíï', 'üíì', 'üíü'];
            
            function createFallingHeart() {
                const heart = document.createElement('div');
                heart.className = 'falling-heart';
                heart.innerHTML = heartSymbols[Math.floor(Math.random() * heartSymbols.length)];
                
                // –°–ª—É—á–∞–π–Ω–æ–µ –ø–æ–ª–æ–∂–µ–Ω–∏–µ —Å–ª–µ–≤–∞
                heart.style.left = Math.random() * 100 + '%';
                
                // –°–ª—É—á–∞–π–Ω—ã–π —Ä–∞–∑–º–µ—Ä
                const size = 1 + Math.random() * 2.2;
                heart.style.fontSize = size + 'rem';
                
                // –°–ª—É—á–∞–π–Ω–∞—è –ø—Ä–æ–¥–æ–ª–∂–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å –ø–∞–¥–µ–Ω–∏—è (–æ—Ç 5 –¥–æ 14 —Å–µ–∫)
                const duration = 5 + Math.random() * 12;
                heart.style.animationDuration = duration + 's';
                
                // –ù–µ–±–æ–ª—å—à–∞—è –∑–∞–¥–µ—Ä–∂–∫–∞
                heart.style.animationDelay = Math.random() * -10 + 's';
                
                // –ò–Ω–æ–≥–¥–∞ —Å–µ—Ä–¥–µ—á–∫–∏ –º–æ–≥—É—Ç –±—ã—Ç—å —á—É—Ç—å —è—Ä—á–µ, –∏–Ω–æ–≥–¥–∞ –±–ª–µ–¥–Ω–µ–µ
                heart.style.color = `rgba(255, 100, 130, ${0.1 + Math.random() * 0.25})`;
                
                document.body.appendChild(heart);
                
                // –£–¥–∞–ª—è–µ–º –ø–æ—Å–ª–µ –æ–∫–æ–Ω—á–∞–Ω–∏—è –∞–Ω–∏–º–∞—Ü–∏–∏ (—á—Ç–æ–±—ã –Ω–µ –Ω–∞–∫–∞–ø–ª–∏–≤–∞–ª–∏—Å—å)
                setTimeout(() => {
                    if (heart.parentNode) heart.remove();
                }, duration * 1000);
            }

            // –°–æ–∑–¥–∞—ë–º —Å—Ä–∞–∑—É –Ω–µ—Å–∫–æ–ª—å–∫–æ —à—Ç—É–∫
            for (let i = 0; i < 18; i++) {
                setTimeout(createFallingHeart, i * 300);
            }

            // –ü—Ä–æ–¥–æ–ª–∂–∞–µ–º —Å–æ–∑–¥–∞–≤–∞—Ç—å –Ω–æ–≤—ã–µ –∫–∞–∂–¥—ã–µ 2 —Å–µ–∫—É–Ω–¥—ã
            setInterval(createFallingHeart, 2000);

            // ========== 2. –ò–ù–¢–ï–†–ê–ö–¢–ò–í –° –ö–ù–û–ü–ö–ê–ú–ò ==========
            const yesBtn = document.getElementById('yesBtn');
            const noBtn = document.getElementById('noBtn');
            const answerContainer = document.getElementById('answerContainer');

            // –ú–∏–ª—ã–µ –æ—Ç–≤–µ—Ç—ã (–¥–ª—è "–î–ê")
            const yesResponses = [
                "üíû –£–†–ê! –¢–´ –°–ê–ú–´–ô –õ–£–ß–®–ò–ô –í–ê–õ–ï–ù–¢–ò–ù–û–ö! üíû",
                "ü•∞ –Ø –¢–ê–ö –°–ß–ê–°–¢–õ–ò–í(–ê)! –¢–´ –ß–£–î–û! ü•∞",
                "üíò –°–ï–†–î–ï–ß–ö–û –†–ê–ó–ë–ò–í–ê–ï–¢–°–Ø –û–¢ –°–ß–ê–°–¢–¨–Ø! üíò",
                "üç´ –¢–ï–ü–ï–†–¨ –£ –ù–ê–° –ë–£–î–ï–¢ –ú–ù–û–ì–û –ö–û–ù–§–ï–¢! üç´",
                "‚ú® –¢–´ –°–î–ï–õ–ê–õ(–ê) –ú–û–ô –î–ï–ù–¨! ‚ú®",
                "üêª –û–ë–ù–ò–ú–ê–®–ö–ò –ù–ê–í–°–ï–ì–î–ê! üêª",
                "üíñ –ù–ê–í–°–ï–ì–î–ê –¢–í–û–ô(–¢–í–û–Ø) üíñ"
            ];

            // –û—Ç–≤–µ—Ç—ã –¥–ª—è –ø–æ–ø—ã—Ç–∫–∏ –Ω–∞–∂–∞—Ç—å "–ù–ï–¢" (–æ—á–µ–Ω—å –º–∏–ª—ã–µ, —á—Ç–æ–±—ã –ø–µ—Ä–µ–¥—É–º–∞–ª–∏)
            const noResponses = [
                "üò¢ –û–π... –º–æ–∂–µ—Ç –±—ã—Ç—å, –ø–µ—Ä–µ–¥—É–º–∞–µ—à—å? üò¢",
                "üíî –ù—É –ø–æ–∂–∞–ª—É–π—Å—Ç–∞... –Ω–∞–∂–º–∏ –î–ê! üíî",
                "ü•∫ –Ø –ø–æ–¥–∞—Ä—é —Ç–µ–±–µ –ø–µ—á–µ–Ω—å–∫—É üç™, –Ω–∞–∂–º–∏ –î–ê!",
                "üòï –ú–æ–∂–µ—Ç, –≤—Å—ë-—Ç–∞–∫–∏ –¥–∞? üòï",
                "üåü –¢—ã —Å–∞–º–æ–µ –ª—É—á—à–µ–µ, –Ω–∞–∂–º–∏ –î–ê! üåü",
                "üí´ –Ø –∑–Ω–∞—é, —Ç—ã —Ö–æ—á–µ—à—å –Ω–∞–∂–∞—Ç—å –î–ê! üí´",
                "üå∏ –î–∞–≤–∞–π –≤—Å—ë-—Ç–∞–∫–∏ –æ—Ç–ø—Ä–∞–∑–¥–Ω—É–µ–º –≤–º–µ—Å—Ç–µ? üå∏"
            ];

            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –î–ê
            yesBtn.addEventListener('click', function() {
                answerContainer.innerHTML = ''; // –æ—á–∏—â–∞–µ–º
                const responseDiv = document.createElement('div');
                responseDiv.className = 'response-message';
                
                // –í—ã–±–∏—Ä–∞–µ–º —Å–ª—É—á–∞–π–Ω—ã–π —Ç—ë–ø–ª—ã–π –æ—Ç–≤–µ—Ç
                const randomYes = yesResponses[Math.floor(Math.random() * yesResponses.length)];
                responseDiv.textContent = randomYes;
                
                // –î–æ–±–∞–≤–ª—è–µ–º —Å –º–∞–ª–µ–Ω—å–∫–æ–π –∫–æ–Ω—Ñ–µ—Ç—Ç–∏-–∞–Ω–∏–º–∞—Ü–∏–µ–π
                answerContainer.appendChild(responseDiv);
                
                // –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–æ –º–∞–ª–µ–Ω—å–∫–∏–µ —Å–µ—Ä–¥–µ—á–∫–∏ –≤—ã–ª–µ—Ç–∞—é—Ç
                for (let i = 0; i < 6; i++) {
                    setTimeout(() => {
                        const mini = document.createElement('span');
                        mini.innerHTML = '‚ù§Ô∏è';
                        mini.style.position = 'fixed';
                        mini.style.left = yesBtn.offsetLeft + yesBtn.offsetWidth / 2 + 'px';
                        mini.style.top = yesBtn.offsetTop + yesBtn.offsetHeight / 2 + 'px';
                        mini.style.fontSize = '2.5rem';
                        mini.style.pointerEvents = 'none';
                        mini.style.transition = 'all 1s ease-out';
                        mini.style.transform = 'translate(-50%, -50%)';
                        mini.style.zIndex = '9999';
                        document.body.appendChild(mini);
                        
                        setTimeout(() => {
                            mini.style.transform = `translate(${Math.random() * 200 - 100}px, -150px) scale(2)`;
                            mini.style.opacity = '0';
                        }, 20);
                        
                        setTimeout(() => mini.remove(), 1100);
                    }, i * 120);
                }
            });

            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –ù–ï–¢ (—Ö–∏—Ç—Ä—ã–π: –≤–º–µ—Å—Ç–æ –æ–¥–Ω–æ–≥–æ –æ—Ç–∫–∞–∑–∞ –ø–æ–∫–∞–∑—ã–≤–∞–µ—Ç –º–∏–ª—ã–µ –ø—Ä–æ—Å—å–±—ã)
            noBtn.addEventListener('click', function() {
                answerContainer.innerHTML = ''; 
                const responseDiv = document.createElement('div');
                responseDiv.className = 'response-message';
                responseDiv.style.background = '#f0dbdf';
                responseDiv.style.borderColor = '#e6a0b5';
                
                const randomNo = noResponses[Math.floor(Math.random() * noResponses.length)];
                responseDiv.textContent = randomNo;
                
                answerContainer.appendChild(responseDiv);

                // –ù–µ–º–Ω–æ–≥–æ —É–≤–µ–ª–∏—á–∏–≤–∞–µ–º –∫–Ω–æ–ø–∫—É –î–ê, —á—Ç–æ–±—ã –ø–æ–¥—Å–æ–∑–Ω–∞—Ç–µ–ª—å–Ω–æ —Ö–æ—Ç–µ–ª–æ—Å—å –Ω–∞–∂–∞—Ç—å
                yesBtn.style.transform = 'scale(1.1)';
                setTimeout(() => yesBtn.style.transform = 'scale(1)', 500);
                
                // –ö–Ω–æ–ø–∫–∞ "–Ω–µ—Ç" —Å–ª–µ–≥–∫–∞ –¥—Ä–µ–π—Ñ–∏—Ç (—Å–º–µ—â–∞–µ–º —á—É—Ç—å-—á—É—Ç—å –¥–ª—è –∑–∞–±–∞–≤—ã)
                noBtn.style.transform = 'translateX(5px)';
                setTimeout(() => noBtn.style.transform = 'translateX(-5px)', 100);
                setTimeout(() => noBtn.style.transform = 'translateX(0)', 200);
            });

            // –≠—Ñ—Ñ–µ–∫—Ç –Ω–∞–∂–∞—Ç–∏—è –Ω–∞ –ª—é–±–æ–µ —Å–µ—Ä–¥–µ—á–∫–æ (–∑–∞–≥–æ–ª–æ–≤–æ–∫) ‚Äî –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–∞—è —Ñ–∏—à–∫–∞
            const heartHug = document.querySelector('.heart-hug');
            if (heartHug) {
                heartHug.addEventListener('click', function() {
                    // –°–æ–∑–¥–∞–¥–∏–º –æ–±–ª–∞–∫–æ –º–∞–ª–µ–Ω—å–∫–∏—Ö —Å–µ—Ä–¥–µ—á–µ–∫
                    for (let i = 0; i < 12; i++) {
                        const span = document.createElement('span');
                        span.innerHTML = '‚ù§Ô∏è';
                        span.style.position = 'absolute';
                        span.style.left = '50%';
                        span.style.top = '50%';
                        span.style.fontSize = '1.8rem';
                        span.style.pointerEvents = 'none';
                        span.style.transition = 'all 1s cubic-bezier(0.2, 0.9, 0.3, 1.2)';
                        span.style.transform = 'translate(-50%, -50%)';
                        span.style.zIndex = '100';
                        heartHug.style.position = 'relative';
                        heartHug.appendChild(span);
                        
                        setTimeout(() => {
                            span.style.transform = `translate(${Math.random() * 200 - 100}px, ${Math.random() * -150 - 30}px) scale(0.5)`;
                            span.style.opacity = '0';
                        }, 20);
                        
                        setTimeout(() => span.remove(), 1100);
                    }
                });
            }
        })();
    </script>
    <!-- –ú–∞–ª–µ–Ω—å–∫–∏–π —Å–∫—Ä—ã—Ç—ã–π —Å—é—Ä–ø—Ä–∏–∑: –∑–≤—ë–∑–¥–æ—á–∫–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏—è -->
</body>
</html>
